@model IEnumerable<Model.ViewModel.SecretarioMunicipioEstadoViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid mt--6">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-content">
                <div class="card-header bg-transparent">
                    <div class="row align-items-center">
                        <div class="col">
                            <h5 class="card-title  text-muted mb-0">MonitoraSUS</h5>
                            <h5 class="h3 mb-0">Autorizar Gestores de Saúde</h5>
                        </div>
                        <div class="col text-right">

                            <!--a href="@Url.Action("Create", "AgenteSecretario", new { userType = 1 })" class="btn btn-success">
                                Adicionar
                            </!--a-->
                            <a href="@Url.Action("Index", "Home")" class="btn btn-default">
                                <i class="fas fa-arrow-left"></i> Voltar
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body ">
                    <div class="table-responsive">
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col" class="sort" data-sort="nome">Solicitante</th>
                                    <th scope="col" class="sort" data-sort="cpf">CPF</th>
                                    <th scope="col" class="sort" data-sort="estado">Estado</th>
                                    <th scope="col" class="sort" data-sort="cidade">Munícipio</th>
                                    <th scope="col" class="sort" data-sort="nivel">Nivel de atuação</th>
                                    <th scope="col" class="sort" data-sort="status">Status</th>
                                    <th scope="col" class="sort" data-sort="acoes">Ações</th>
                                </tr>
                            </thead>
                            <tbody class="list">
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Pessoa.Nome)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Pessoa.Cpf)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Pessoa.Estado)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Pessoa.Cidade)</td>
                                        <td>@(item.PessoaMunicipio == null ? "Estadual" : "Municipal")</td>
                                        <td>
                                            <span class="badge badge-dot mr-4">
                                                <i class="bg-warning"></i>
                                                <span class="status">
                                                    @(item.Situacao == 0 ? "Pendente" : "Ativo")
                                                </span>
                                            </span>
                                        </td>
                                        <td>
                                            <button class="btn btn-icon btn-success btn-sm" title="Ativar" type="button">
                                                <span class="btn-inner--icon"><i class="fas fa-check"></i></span>
                                            </button>
                                            <button class="btn btn-icon btn-danger btn-sm" title="Descartar" type="button">
                                                <span class="btn-inner--icon"><i class="fas fa-times"></i></span>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

}