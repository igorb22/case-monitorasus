@model Model.RecuperarSenhaModel

@{
    ViewData["Title"] = "RecuperarSenha";
}

<div class="container ">
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-login-image">
                        </div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <img src="~/assets/img/logo-sus.png" class="login-logo">
                                    <h1 class="h4 text-gray-900 mb-4">MonitoraSUS</h1>
                                </div>
                                <hr>
                                <form class="user" asp-controller="Login" asp-action="ChangePass">
                                    <div class="form-group">
                                        <input type="password" required class="form-control form-control-user" name="senha" id="senha" oninput="compare()" placeholder="Nova senha">
                                    </div>
                                    <div class="form-group">
                                        <input type="password" required class="form-control form-control-user" oninput="compare()" name="senha2" id="senha2" placeholder="Repetir nova senha">
                                        <input type="hidden" asp-for="IdUsuario" value="@Model.IdUsuario" required />
                                    </div>
                                    <hr>
                                    <!-- Div erro -->
                                    <div class="alert alert-danger text-center" id="divErro" hidden role="alert">
                                        Senhas não conferem!
                                    </div>
                                    <!-- Fim div erro -->
                                    <button type="submit" id="btnSubmit" class="btn btn-primary btn-user btn-block">
                                        Alterar Senha
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function compare() {
            let input1 = document.getElementById('senha');
            let input2 = document.getElementById('senha2');
            let btn = document.getElementById('btnSubmit');
            let div = document.getElementById("divErro");

            if (input2.value != "")
                if (input1.value != input2.value) {
                    btn.disabled = true;
                    input1.className = "form-control form-control-user border-danger";
                    input2.className = "form-control form-control-user border-danger";
                    div.hidden = false;
                } else {
                    btn.disabled = false;
                    input1.className = "form-control form-control-user";
                    input2.className = "form-control form-control-user";
                    div.hidden = true;
                }
        }
    </script>
}
<script src="~/assets/js/custom.js"></script>